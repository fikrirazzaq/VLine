<android.support.v7.widget.CardView
    android:id="@+id/ly_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="170dp"
    android:background="#FEFEFE"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#dce47643"
            android:padding="4dp"
            >

            <TextView
                android:id="@+id/tx_item_list_nama_bank"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BNI Korea"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:padding="4dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/rl_item_list_bank_teller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tx_list_teller_nomorantri"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:text="32"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tx_list_teller_jumlahantrian"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity=""
                    android:text="58"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@mipmap/multiple_user"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/rl_item_list_bank_cs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tx_list_cs_nomorantri"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:text="32"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_below="@+id/tx_list_cs_nomorantri"
                    android:id="@+id/tx_list_cs_jumlahantrian"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity=""
                    android:text="58"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@mipmap/multiple_user"/>
                
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>