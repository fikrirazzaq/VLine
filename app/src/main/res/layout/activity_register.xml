<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.telc2.vline.activity.RegisterActivity">

    <!-- Blok Icon START -->
    <RelativeLayout
        android:id="@+id/rl_act_reg_logo"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_act_reg_logo"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!-- Blok Icon END -->

    <!-- Blok Form START -->
    <RelativeLayout
        android:id="@+id/rl_act_reg_form"
        android:layout_below="@+id/rl_act_reg_logo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_act_reg_nama"
            android:hint="nama lengkap"
            android:inputType="text"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_mail_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_act_reg_username"
            android:layout_below="@+id/edt_act_reg_nama"
            android:hint="username"
            android:inputType="text"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_mail_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_act_reg_telp"
            android:layout_below="@+id/edt_act_reg_username"
            android:hint="nomor telepon"
            android:inputType="text"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_mail_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_act_reg_pass"
            android:layout_below="@+id/edt_act_reg_telp"
            android:hint="password"
            android:inputType="textPassword"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_lock_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_act_reg_passconf"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_lock_24dp"
            android:layout_below="@+id/edt_act_reg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_act_reg_signup"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/button_bg"
            android:minHeight="38dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edt_act_reg_passconf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!-- Blok Form END -->

    <!-- Blok Already Have Akun START -->
    <RelativeLayout
        android:id="@+id/rl_act_reg_alreadyakun"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_act_reg_form"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tx_act_reg_infosignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="already have an account?"/>

        <Button
            android:id="@+id/btn_act_reg_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="64dp"
            android:minHeight="48dp"
            android:text="sign in"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignBaseline="@+id/tx_act_reg_infosignin"
            android:layout_alignBottom="@+id/tx_act_reg_infosignin"
            android:layout_toRightOf="@+id/tx_act_reg_infosignin"
            android:layout_toEndOf="@+id/tx_act_reg_infosignin" />
    </RelativeLayout>
    <!-- Blok Already Have Akun END -->

</RelativeLayout>
